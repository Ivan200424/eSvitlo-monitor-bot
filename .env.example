BOT_TOKEN=your_telegram_bot_token
ADMIN_IDS=123456789,987654321
CHECK_INTERVAL_MINUTES=3
TZ=Europe/Kyiv
DATABASE_PATH=./data/bot.db

# Моніторинг світла (опціонально)
ROUTER_HOST=
ROUTER_PORT=80
POWER_CHECK_INTERVAL=30

# ================================================
# CAPACITY PLANNING - Ліміти навантаження системи
# ================================================
# Визначають максимальні межі для контрольованого зростання.
# Система автоматично алертує при досягненні 80%, 90%, 100% лімітів.

# Користувачі
MAX_TOTAL_USERS=10000
MAX_CONCURRENT_USERS=500
MAX_WIZARD_PER_MINUTE=30
MAX_ACTIONS_PER_USER_PER_MIN=20

# Канали
MAX_TOTAL_CHANNELS=5000
MAX_CHANNELS_PER_USER=3
MAX_CHANNEL_PUBLISH_PER_MIN=100
MAX_CONCURRENT_CHANNEL_OPS=50

# IP Моніторинг (найважчий компонент)
MAX_TOTAL_IPS=2000
MAX_IPS_PER_USER=3
MIN_PING_INTERVAL_SEC=2
MAX_CONCURRENT_PINGS=100
MAX_PINGS_PER_MINUTE=3000

# Scheduler
MAX_SCHEDULER_JOBS=10
MIN_SCHEDULER_INTERVAL_SEC=10
MAX_JOB_EXECUTION_TIME_SEC=60
MAX_SCHEDULER_OVERLAPS=2

# Повідомлення
MAX_MESSAGES_PER_MINUTE=1000
MAX_MSG_PER_CHANNEL_PER_MIN=20
MAX_MESSAGE_RETRIES=3
MAX_MESSAGE_QUEUE_SIZE=5000

# Пороги алертів (0.0-1.0)
ALERT_WARNING_THRESHOLD=0.8      # 80% - попередження
ALERT_CRITICAL_THRESHOLD=0.9     # 90% - критично
ALERT_EMERGENCY_THRESHOLD=1.0    # 100% - аварія

# Аварійний режим
EMERGENCY_AUTO_PAUSE=true
EMERGENCY_SCHEDULER_SLOWDOWN=2.0
EMERGENCY_DISABLE_NON_CRITICAL=true
